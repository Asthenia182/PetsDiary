<UserControl x:Class="PetsDiary.Presentation.Views.Weights"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             
             xmlns:res="clr-namespace:PetsDiary.Presentation.Resources"
             xmlns:local="clr-namespace:PetsDiary.Presentation.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Label Grid.Row="6" Grid.Column="0" 
               Content="{x:Static res:CommonResources.Weight}"
               Style="{StaticResource FormLabelStyle}"/>

        <StackPanel Grid.Row="6" Grid.Column="1"  Orientation="Horizontal">
            <TextBox Text="{Binding ActualWeight,UpdateSourceTrigger=LostFocus, Mode=TwoWay}"
                 Width="100" 
                 Margin="0,10" 
                 Style="{StaticResource FormTextBoxStyle}"/>
            <Label Content="[kg]" VerticalAlignment="Center"/>
        </StackPanel>

    </Grid>
</UserControl>
